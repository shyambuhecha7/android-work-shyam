<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

             
                   
                                                            
       
    <com.google.android.material.card.MaterialCardView
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="#ECEEF5"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="8dp" android:tag="layout/recycler_item_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            >
            <ImageView
                android:id="@+id/imgProfileIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:tag="binding_1"         
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="185dp"
                android:layout_marginBottom="16dp"
                android:tag="binding_2"         
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgProfileIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/callTimeIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
                app:layout_constraintBottom_toBottomOf="@id/imgProfileIcon"
                android:tag="binding_3"          
                app:layout_constraintStart_toStartOf="@id/tvProfileTitle"/>

            <TextView
                android:id="@+id/callTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:hint="30min 45sec"
                android:tag="binding_4"        
                android:textColor="@color/rv_item_text_color"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/callTimeIcon"
                app:layout_constraintStart_toEndOf="@+id/callTimeIcon"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileTitle" />


            <ImageView
                android:id="@+id/callDateIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                android:tag="binding_5"              
                app:layout_constraintBottom_toBottomOf="@+id/callTime"
                app:layout_constraintEnd_toStartOf="@+id/callDateTime"
                app:layout_constraintStart_toEndOf="@+id/callTime"
                app:layout_constraintTop_toTopOf="@+id/callTime"
                />

            <TextView android:id="@+id/callDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:tag="binding_6"            
                android:textColor="@color/rv_item_text_color"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/callTimeIcon"
                app:layout_constraintStart_toEndOf="@+id/callDateIcon"
                app:layout_constraintTop_toTopOf="@+id/callDateIcon" />


            <ImageView
                android:id="@+id/imgThreeDot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/threedot"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgCall"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgCall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/itemcall"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
         