<?xml version="1.0" encoding="utf-8"?>

                                                        

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:background="@color/item_bg"
        app:strokeColor="#ECEEF5"
        app:strokeWidth="1dp"
        app:cardCornerRadius="8dp" android:tag="layout/profile_item3_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:foregroundGravity="center_vertical"
                android:text="@string/logout"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgRight"
                app:layout_constraintStart_toEndOf="@id/imgRight"
                app:layout_constraintTop_toTopOf="@id/imgRight" />

            <View
                android:layout_width="311dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
         