<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        tools:context=".ui.CounterActivity" android:tag="layout/activity_counter_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="200sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.191" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:textSize="50sp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv"
            app:layout_constraintStart_toStartOf="@id/tv"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         